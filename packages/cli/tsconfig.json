{
	"compilerOptions": {
		"target": "es2021",
		"module": "es2022",
		"rootDir": "./src",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"declaration": true,
		"noEmit": false,
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*.ts", "./package.json"]
}
